{% style %}
  :root {
    --brand-secondary: {{ settings.brand-secondary }};
    --brand-modify-secondary: {{ settings.brand-secondary | color_modify: 'alpha', 0.3 }};
    --button-bg-color: {{ settings.button-bg-color }};
    --button-text-color: {{ settings.button-text-color }};
    --button-bg-hover-color: {{ settings.button-bg-hover-color }};
    --button-text-hover-color: {{ settings.button-text-hover-color }};
	--button-bg-hover-opacity-color: {{ settings.button-bg-hover-color | color_modify: 'alpha', 0.65 }};
    --button-text-hover-modify-color: {{ settings.button-text-hover-color | color_modify: 'alpha', 0.4 }};
    --product-btn-bg-color: {{ settings.product-btn-bg-color }};
    --product-icon-color: {{ settings.product-icon-color }};
    --product-btn-bg-hover-color:  {{ settings.product-btn-bg-hover-color}};
    --product-icon-hover-color: {{ settings.product-icon-hover-color }};
    --navbar-background-color: {{ settings.navbar_background_color }};
    --navbar-text-modify-color: {{ settings.navbar-text-color | color_modify: 'alpha', 0.1 }};
    --navbar-text-color: {{ settings.navbar-text-color }};
    --header-icon-modify-color:{{ settings.header-icon-color | color_modify: 'alpha', 0.1 }};
    --header-icon-color:{{ settings.header-icon-color }};
    --header-icon-hover-color:{{ settings.header-icon-hover-color }};
    --menu-bg-color:{{ settings.menu-bg-color }};
    --menu-bg-opacity-color:{{ settings.menu-bg-color | color_modify: 'alpha', 0.9 }};
    --menu-text-color:{{ settings.menu-text-color }};
    --menu-text-hover-color:{{ settings.menu-text-hover-color }};
	--sale-bg-color:{{ settings.sale_bg_color }};
    --sale-text-color:{{ settings.sale_text_color }};
	--soldout-bg-color:{{ settings.soldout_bg_color }};
    --soldout-text-color:{{ settings.soldout_text_color }};
    --footer-bg-color: {{ settings.footer-bg-color }};
    --footer-heading-color: {{ settings.footer-heading-color }};
    --footer-text-color: {{ settings.footer-text-color }};
    --footer-text-hover-color: {{ settings.footer-text-hover-color }};
    --footer-bottom-bg-color: {{ settings.footer-bottom-bg-color }};
    --footer-bottom-text-color: {{ settings.footer-bottom-text-color }};
    --password-color: {{ settings.password_bgcolor }};
	--password-textcolor: {{ settings.password_textcolor }};
    --mainbgcolor: {{ settings.mainbgcolor }};
    --font-body-family: {{ settings.type_body_font.family }};
  }
{% endstyle %}