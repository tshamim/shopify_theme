
<div class="footer-social">
  <ul class="footer__list-social list-unstyled list-social" role="list">
      {%- if settings.social_facebook_link != blank -%}
    <li class="list-social__item facebook">
      <a href="{{ settings.social_facebook_link }}" class="link link--text list-social__link" >
        <i class="fa fa-facebook" aria-hidden="true"></i>
        <span class="icon__-text">{{ 'general.social.links.facebook' | t }}</span>
      </a>
    </li>
    {%- endif -%}
    {%- if settings.social_twitter_link != blank -%}
    <li class="list-social__item twitter">
      <a href="{{ settings.social_twitter_link }}" class="link link--text list-social__link" >
        <i class="fa fa-twitter" aria-hidden="true"></i>
        <span class="icon__-text">{{ 'general.social.links.twitter' | t }}</span>
      </a>
    </li>
    {%- endif -%}
    {%- if settings.social_pinterest_link != blank -%}
    <li class="list-social__item pinterest">
      <a href="{{ settings.social_pinterest_link }}" class="link link--text list-social__link" >
       <i class="fa fa-pinterest-p" aria-hidden="true"></i>
        <span class="icon__-text">{{ 'general.social.links.pinterest' | t }}</span>
      </a>
    </li>
    {%- endif -%}
    {%- if settings.social_instagram_link != blank -%}
    <li class="list-social__item instagram">
      <a href="{{ settings.social_instagram_link }}" class="link link--text list-social__link" >
        <i class="fa fa-instagram" aria-hidden="true"></i>
        <span class="icon__-text">{{ 'general.social.links.instagram' | t }}</span>
      </a>
    </li>
    {%- endif -%}
    {%- if settings.social_tiktok_link != blank -%}
    <li class="list-social__item tiktok">
      <a href="{{ settings.social_tiktok_link }}" class="link link--text list-social__link" >
        {% include 'icons' with 'tiktok' %}
        <span class="icon__-text">{{ 'general.social.links.tiktok' | t }}</span>
      </a>
    </li>
    {%- endif -%}
    {%- if settings.social_tumblr_link != blank -%}
    <li class="list-social__item tumblr">
      <a href="{{ settings.social_tumblr_link }}" class="link link--text list-social__link" >
        <i class="fa fa-tumblr" aria-hidden="true"></i>
        <span class="icon__-text">{{ 'general.social.links.tumblr' | t }}</span>
      </a>
    </li>
    {%- endif -%}
    {%- if settings.social_snapchat_link != blank -%}
    <li class="list-social__item snapchat">
      <a href="{{ settings.social_snapchat_link }}" class="link link--text list-social__link" >
        <i class="fa fa-snapchat-ghost" aria-hidden="true"></i>
        <span class="icon__-text">{{ 'general.social.links.snapchat' | t }}</span>
      </a>
    </li>
    {%- endif -%}
    {%- if settings.social_youtube_link != blank -%}
    <li class="list-social__item youtube">
      <a href="{{ settings.social_youtube_link }}" class="link link--text list-social__link" >
        <i class="fa fa-youtube-play" aria-hidden="true"></i>
        <span class="icon__-text">{{ 'general.social.links.youtube' | t }}</span>
      </a>
    </li>
    {%- endif -%}
    {%- if settings.social_vimeo_link != blank -%}
    <li class="list-social__item vimeo">
      <a href="{{ settings.social_vimeo_link }}" class="link link--text list-social__link" >
           <i class="fa fa-vimeo" aria-hidden="true"></i>
        <span class="icon__-text">{{ 'general.social.links.vimeo' | t }}</span>
      </a>
    </li>
    {%- endif -%}
  </ul>
</div>