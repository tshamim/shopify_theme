<div class="page-width">
  <div class="aboutus-information row image-position-{{ section.settings.image_position }}">
    {% if section.settings.image != blank %}
    <div class="aboutus-banner col-lg-6 col-md-12 col-sm-12">
      <div class="image-container">
        <a class="ishi-customhover-{{ section.settings.bannerhover }}" 
           {% if section.settings.bannerimage_link != blank %}href="{{ section.settings.bannerimage_link }}"{% else %}role="link" aria-disabled="true"{% endif %}>
          <img class="lazyload"
               data-src="{{ section.settings.image | img_url: 'master' }}"
               alt="Aboutus Image">
        </a>
      </div>
    </div>
    {% endif %}
    <div class="information-container {% if section.settings.image!= blank %}col-lg-6 col-md-12 col-sm-12{% else%}col-md-12 col-sm-12{% endif %}">
       {% if section.settings.heading != blank %}
        <div class="title-container">
          <h3 class="heading">{{ section.settings.heading }}</h3>
        </div>
       {% endif %}
       {% if section.settings.info != blank %}
        <div class="list-Aboutus-info rte">
          {{ section.settings.info }}
        </div>
       {% endif %}
        {% if section.settings.btn_link %}
        <div class="about-btn">
          <a href="{% if section.settings.btn_link != blank %}{{ section.settings.btn_link }}{% else %}/{% endif %}" class="btn">
            {{ section.settings.about_btn }}
            {% include 'icons' with 'arrow' %}
          </a>
        </div>
        {% endif %}
    </div>
  </div>
</div>

<style type="text/css">
  #shopify-section-{{ section.id }} {
    margin-bottom: {{ section.settings.section_bottom_spacing_desktop }}px;
  }
  @media (max-width: 767px) {
    #shopify-section-{{ section.id }} {
      margin-bottom: {{ section.settings.section_bottom_spacing_mobile }}px;
    }
  }
</style>

{% schema %}
  {
    "name": "Aboutus Banner",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "Size: 700px X 600px"
      },
	  {
        "type": "select",
        "id": "image_position",
        "label": "Image Position",
        "default": "left",
        "options": [
          { "value": "left", "label": "Left"},
          { "value": "right", "label": "Right"}
        ]
      },
      {
        "type": "select",
        "id": "bannerhover",
        "label": "Hover",
        "default": "fadeinrotate",
        "options": [
          { "value": "fadeinnormal", "label": "FadeIn Normal"},
          { "value": "fadeinflip", "label": "FadeIn Flip"},
          { "value": "fadeinrotate", "label": "FadeIn Rotate"},
          { "value": "fadeinrotate3D", "label": "FadeIn Rotate3D"},
          { "value": "fadeintop", "label": "FadeIn Top"},
          { "value": "fadeinbottom", "label": "FadeIn Bottom"},
          { "value": "fadeintopbottom", "label": "FadeIn Top Bottom"},
          { "value": "fadeoutcenter", "label": "FadeOut Center"},
          { "value": "fadeinoutbordercorner", "label": "FadeInOut BorderCorner"},
          { "value": "doublefadeincenter", "label": "Double FadeInOut Center"},
          { "value": "fadeinoutsingle", "label": "FadeInOut Single Scroll"},
          { "value": "fadeinoutdoublevertical", "label": "FadeInOut Double Scroll"},
          { "value": "perspective", "label": "Perspective"},
          { "value": "fadeinoutrotatevertical", "label": "FadeInOut Rotate Vertical"}
        ]
      },
      {
        "type": "url",
        "id": "bannerimage_link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "We Have Everything You Need ?"
      },
      {
        "type": "html",
        "id": "info",
        "label": "Description",
        "default": "<p>Lorem ipsum, or lipsum as it is sometimes known, is dummy text used in laying out print, graphic or web designs. The passage is attributed to an unknown typesetter in the 15th century who is thought to have scrambled parts of Cicero's De Finibus Bonorum et Malorum for use in a type specimen book.Lorem ipsum.</p>"
      },
      {
        "type": "text",
        "id": "about_btn",
        "label": "Button Label",
        "default": "Contact Us"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
      },
	  {
        "type": "header",
        "content": "Section Bottom Spacing"
      },
      {
        "type": "range",
        "id": "section_bottom_spacing_desktop",
        "label": "Desktop",
        "min": 0,
        "max": 70,
        "step": 10,
        "default": 70
      },
      {
        "type": "range",
        "id": "section_bottom_spacing_mobile",
        "label": "Mobile",
        "min": 0,
        "max": 50,
        "step": 10,
        "default": 30
      }
	],
	"presets": [
      {
        "name": "Aboutus Banner"
      }
    ]
  }
{% endschema %}
