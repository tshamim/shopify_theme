<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}" currency="{{ '0' | money | replace: '.', '' | replace: ',', '' | replace: '0', '' }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
    {%- endif -%}

    {%- unless settings.type_body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}
    
    <script>
      var theme = {
        moneyFormat: {{ shop.money_format | json }},
        moneyFormatWithCurrency: {{ shop.money_with_currency_format | json }},
      }
    </script>
    
    <script src="{{ 'includes.min.js' | asset_url }}"></script>
    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'cart-notification.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'lazysizes.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'shop.js' | asset_url }}" defer="defer"></script>
    {{ content_for_header }}

    {%- liquid
      assign body_font_bold = settings.type_body_font | font_modify: 'weight', '700'
      assign body_font_semibold = settings.type_body_font | font_modify: 'weight', '600'
      assign body_font_medium = settings.type_body_font | font_modify: 'weight', '500'
      assign body_font_lighter = settings.type_body_font | font_modify: 'weight', '300'
      assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
    %}
    {% style %}
      {{ settings.type_body_font | font_face: font_display: 'swap' }}
      {{ body_font_bold | font_face: font_display: 'swap' }}
      {{ body_font_semibold | font_face: font_display: 'swap' }}
      {{ body_font_medium | font_face: font_display: 'swap' }}
      {{ body_font_lighter | font_face: font_display: 'swap' }}
      {{ body_font_italic | font_face: font_display: 'swap' }}
      {{ body_font_bold_italic | font_face: font_display: 'swap' }}

      :root {
        --font-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
        --font-body-style: {{ settings.type_body_font.style }};
        --font-body-weight: {{ settings.type_body_font.weight }};
        --font-weight-body--bold: {{ settings.type_body_font.weight | default: 700 }};
      }

      *,
      *::before,
      *::after {
        box-sizing: inherit;
      }

      html {
        box-sizing: border-box;
        font-size: 62.5%;
        height: 100%;
      }

      body {
        display: grid;
        grid-template-rows: auto auto 1fr auto;
        grid-template-columns: 100%;
        min-height: 100%;
        margin: 0;
        font-size: 14px;
        letter-spacing: 0.06rem;
        line-height: 1.8;
        font-family: var(--font-body-family);
        font-style: var(--font-body-style);
        font-weight: var(--font-body-weight);
      }

    {% endstyle %}
    {% include 'css-variables' %}
    {{ 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' | stylesheet_tag }}
    {{ 'includes.min.css' | asset_url | stylesheet_tag }}
    {{ 'base.css' | asset_url | stylesheet_tag }}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
     {% if settings.custom_css != blank %}
      <style>
        {{settings.custom_css}}
      </style>
    {% endif %}
     
    

    {%- unless settings.type_body_font.system? -%}
      <link rel="preload" as="font" href="{{ settings.type_body_font | font_url }}" type="font/woff2" crossorigin>
    {%- endunless -%}

    <script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>
  </head>

  <body class="template-{{ template | split: '.' | first | replace: '/', '-' }} {{ page.template_suffix }} button-{{settings.btn-radius}} {{settings.storelayout}} {% if settings.mainbgimage != blank and settings.storelayout == "box-layout" %}lazyload{% endif %}" {% if settings.mainbgimage != blank %} data-bg="{{ settings.mainbgimage | img_url: 'master' }}"{% endif %}>
    <div class="maincontent">
    <a class="skip-to-content-link button visually-hidden" href="#MainContent">
      {{ "accessibility.skip_to_text" | t }}
    </a>

    
    {% if settings.header-layout == "header_layout1" %}
    <div id="header-layout1" class="wrapper-nav ">
      {% section 'header_layout1' %}
    </div>
    {% endif %}
    {% if settings.header-layout == "header_layout2" %}
    <div id="header-layout2" class="wrapper-nav ">
      {% section 'header_layout2' %}
    </div>
    {% endif %}
    {% if settings.header-layout == "header_layout3" %}
    <div id="header-layout3" class="wrapper-nav ">
      {% section 'header_layout3' %}
      <div class="nav-height hidden-lg-down">
        <div class="navfullwidth">
          <div class="page-width">
            {% section 'Ishi_megamenu' %}
          </div>
        </div>
      </div>
    </div>
    {% endif %}
    
    {% assign show_sidebar = false %}
    {% if settings.show_product and template.name == 'product' %}
      {% assign show_sidebar = true %}
    {% endif %}
    {% if settings.show_collection and template.name == 'collection' %}
      {% assign show_sidebar = true %}
    {% endif %}
    {% if settings.show_blog and template.name == 'article' %}
      {% assign show_sidebar = true %}
    {% endif %}
    {% if settings.show_search and template.name == 'search' %}
      {% assign show_sidebar = true %}
    {% endif %}
    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      
      {% if show_sidebar == true %}
      <div class="page-width">
        <div class="row">
          {% endif %}
          {% if show_sidebar == true %}  
          <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 normal-sidebar sidebar_content">
            {% section "Ishi_sidebar" %}
          </div>
          {% endif %}
          <div class="normal_main_content {% if show_sidebar == true %}col-lg-9 col-md-12 col-sm-12 col-xs-12{% elsif template.name != 'index' and page.handle != 'contact' %}page-width{% endif %}">
            {% if template contains 'page' or template contains 'collections' or template contains 'cart' %}
            <h1 class="page-title center">
              {{ page_title | escape }}
            </h1>

            {% endif %}
            {{ content_for_layout }}
          </div>
          {% if show_sidebar == true %}
        </div>
      </div>
      {% endif %}
    </main>

    {% section 'footer' %}
    {% section 'copyright_payment' %}
    {% section 'newsletterpopup' %}
    {% section 'cookieconsent' %}
    {% if settings.enable_slidetop %}
    <a id="slidetop" href="#top" title="top" >{% include 'icons' with 'caret' %}</a>
    {% endif %}
    <!--QUICKVIEW MODAL START -->
    {%- if settings.show_quickview -%}
      <quickview-dialog id="qvPopupModal" class="{%- if settings.picker_type == 'button' -%}product-swatches{% else %}product-dropdown{% endif %} product-popup-modal toggle-dropdown ">
        <div role="dialog" aria-modal="true" class="product-popup-modal__content qv-wrapper" tabindex="-1">
          <button id="ModalClose-quick-view" type="button" class="product-popup-modal__toggle" aria-label="{{ 'accessibility.close' | t }}"> {% render 'icons' with 'close' %}</button>
          <div class="product-popup-modal__content-info">
            <div id="qv-images-container" class="col-md-6">
              <div id="qv-product-cover"> <img src="{{ 'no-image.png' | asset_url }}"> </div>
              <div id="qv-thumbnails"></div>
            </div>
            <div id="qv-text-container" class="col-md-6">
              <div id="qv-productname"></div>
              <div class="product-price">
                <div id="qv-compareatprice"></div>
                <div id="qv-price"></div>
              </div>
              <div id="qv-spr-badge" class="spr-badge"></div>
              <input type="checkbox" class="more_toggle hidden" id="qv-productshortdescription"/>
              <div id="qv-productdescription" class="rte"></div>
              <label class="more-description" for="qv-productshortdescription">
                <span class="open">{{ 'products.product.readmore' | t }}</span>
                <span class="close">{{ 'products.product.readless' | t }}</span>
              </label>
              <div id="qv-variants"> </div>

              <div id="qv-quantity-selector" class="product-form__input product-form__quantity">
                <quantity-input class="quantity">
                  <button class="quantity__button no-js-hidden" name="minus" type="button">
                    <span class="visually-hidden">{{ 'products.product.quantity.decrease' | t: product: product.title | escape }}</span>
                   {% include 'icons' with 'minus' %}
                  </button>
                  <input class="quantity__input"
                         type="number"
                         name="quantity"
                         min="1"
                         value="1"
                         form="product-form"
                         >
                  <button class="quantity__button no-js-hidden" name="plus" type="button">
                    <span class="visually-hidden">{{ 'products.product.quantity.increase' | t: product: product.title | escape }}</span>
                     {% include 'icons' with 'plus' %}
                  </button>
                </quantity-input>
              </div>
              <input id="qv-variantid" type="hidden" value="">
              <div id="qv-add-to-cart" class="btn">
                <span>{{ 'products.product.add_to_cart' | t }}</span>
                <span>{{ 'products.product.sold_out' | t }}</span>
                
              </div>
            </div>	
          </div>
        </div>
      </quickview-dialog>
    {% endif %}
      </div>
    <!--QUICKVIEW MODAL END -->
    {% if template.name == 'index' %}
    	{% section 'Ishi_sticky_product' %}
    {% endif %}
    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
    </ul>
   
    <script>
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}'
      };

      window.cartStrings = {
        error: `{{ 'sections.cart.cart_error' | t }}`,
        quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
      }

      window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
      }
    </script>
   {% if settings.custom_javascript != blank %}
      <script type="text/javascript">
        {{settings.custom_javascript}}
      </script>
    {% endif %}
  </body>
</html>
